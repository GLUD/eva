{% extends 'base.html.twig' %}

{% block body %}
    <h1>User list</h1>

    <table>
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username}}</td>
                <td>{{ user.email}}</td>
                <td>{{ user.nombre}}</td>
                <td>{{ user.apellido}}</td>
                <td>{{ user.rol}}</td>
                <td>
                    <ul>
                       <!--<li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        -->
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
