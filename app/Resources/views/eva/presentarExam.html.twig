    <script src="{{ asset('js/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            $('#dialogoSencillo').button();
            {
                {# Formatea el boton#}
            }

            {# Formato de la ventana de dialogo#}
            $('#dialogo').dialog({
                autoOpen: open,
                modal: false,
                width: 350,
                height: 200,

                buttons: {
                Google: function() {
                    window.location.href = "http://www.google.com";
                },
                jQueryUI: function() {
                    window.location.href = "http://jqueryui.com";
                },
                    Cerrar: function() {
                        $(this).dialog("close");
                    }
                }
            });
            $('#dialogoSencillo').click(function(){
            {# Mjuestra el dialogo la hacer click#}
            $('#dialogo').dialog('open');
            });
        });
    </script>

